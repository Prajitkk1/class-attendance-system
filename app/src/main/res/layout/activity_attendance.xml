<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68dp"
                android:text="update attendance" />

            <TextView
                android:id="@+id/responseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attendance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:text="loading......" />

            <TextView
                android:id="@+id/presentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/responseTextView"
                android:layout_marginStart="32dp"
                android:layout_marginTop="72dp"
                android:layout_toEndOf="@+id/responseTextView"
                android:text="loading.." />

            <TextView
                android:id="@+id/absentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/presentid"
                android:layout_below="@+id/presentid"
                android:layout_marginTop="39dp"
                android:text="loading.." />

            <TextView
                android:id="@+id/not_availableid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/absentid"
                android:layout_below="@+id/absentid"
                android:layout_marginTop="34dp"
                android:text="loading.." />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/absentid"
                android:layout_below="@+id/responseTextView"
                android:layout_marginTop="27dp"
                android:text="Attendance for last 30 days:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/absentid"
                android:layout_marginEnd="40dp"
                android:layout_toStartOf="@+id/responseTextView"
                android:text="no of present" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/not_availableid"
                android:layout_alignStart="@+id/textView8"
                android:text="no of absent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/not_availableid"
                android:layout_alignStart="@+id/textView9"
                android:text="not_available" />

            <TextView
                android:id="@+id/todays_attendanceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="35dp"
                android:text="todays_attendance:" />

            <TextView
                android:id="@+id/todays_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/todays_attendanceid"
                android:layout_alignStart="@+id/not_availableid"
                android:text="loading..." />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>